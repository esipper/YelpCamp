<% include ./partials/header %>

<div class="row">
    <div class="col-md-12 text-center">
        <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
            <label for="firstName" class="sr-only">First Name</label>
            <input type="text" id="firstName" class="form-control" name="firstName" placeholder="First name" required autofocus>
            <label for="lastName" class="sr-only">Last Name</label>
            <input type="text" id="lastName" class="form-control" name="lastName" placeholder="Last name" required>
            <label for="email" class="sr-only">Email</label>
            <input type="email" id="email" class="form-control" name="email" placeholder="Email" required>
            <label for="avatar" class="sr-only">Avatar</label>
            <input type="text" id="avatar" class="form-control" name="avatar" placeholder="Avatar url" required>
            <label for="adminCode" class="sr-only">Admin Code</label>
            <input type="text" id="adminCode" class="form-control" name="adminCode" placeholder="Admin Code">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>